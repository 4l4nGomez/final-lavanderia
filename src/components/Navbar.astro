---
import type { HTMLAttributes } from 'astro/types';
---
<nav class="bg-[#35373a] text-white p-4 sticky top-0 z-50 shadow-lg font-poppins backdrop-blur-sm bg-opacity-90">
  <div class="relative max-w-6xl mx-auto flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-2 md:absolute md:left-20">
  <img src="/lavoplus.png" alt="Logo" class="h-16 md:h-20 w-auto transition-transform duration-300 hover:scale-110" />
</a>
    <!-- Menú -->
    <ul id="menu" class="hidden absolute md:relative top-full left-0 w-full md:w-auto md:flex flex-col md:flex-row items-center gap-6 md:gap-12 mx-auto text-white text-lg font-semibold bg-[#1565C0] md:bg-transparent p-4 md:p-0">
      <li><a href="/" class="hover:text-pink-300 transition-colors duration-300 ease-in-out">Inicio</a></li>
      <li><a href="/servicios" class="hover:text-pink-300 transition-colors duration-300 ease-in-out">Servicios</a></li>
      <li><a href="/ubicacion" class="hover:text-pink-300 transition-colors duration-300 ease-in-out">Ubicación</a></li>
      <li><a href="/contacto" class="hover:text-pink-300 transition-colors duration-300 ease-in-out">Contacto</a></li>
    </ul>

    <!--Botón hamburguesa-->
    <button 
      id="menu-btn" 
      aria-label="Abrir menú" 
      class="md:hidden p-2 rounded-md hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white"
      onclick="toggleMenu()"
    >
      <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <script is:inline>
    // Función para manejar el menú
    function toggleMenu() {
      const menu = document.getElementById('menu');
      menu.classList.toggle('hidden');
    }
    
    // Opcional: Cerrar menú al hacer clic en un enlace
    document.querySelectorAll('#menu a').forEach(link => {
      link.addEventListener('click', () => {
        const menu = document.getElementById('menu');
        if (window.innerWidth < 768) {
          menu.classList.add('hidden');
        }
      });
    });
  </script>
</nav>