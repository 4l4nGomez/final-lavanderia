---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contacto | Lavandería LAVO PLUS</title>
  <meta name="description" content="Contáctanos para cualquier duda o cotización de servicio de lavandería en Puebla." />
  <meta name="keywords" content="contacto lavandería Puebla, cotización lavado, tintorería Puebla" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
</head>

<body class="font-sans bg-gray-100 text-gray-800">
  <Navbar />

  <!-- Hero Section -->
  <section class="py-16 md:py-24 px-6 bg-gradient-to-r from-blue-100 to-blue-50 text-center">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl md:text-5xl font-extrabold text-blue-900 mb-6" data-aos="fade-up">
        Contáctanos
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        ¿Tienes preguntas o deseas una cotización? Estamos aquí para ayudarte.
      </p>
    </div>
  </section>

  <!-- Formulario y Info de Contacto -->
  <section class="py-12 md:py-20 px-6">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Formulario -->
      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10" data-aos="fade-right">
        <h2 class="text-2xl md:text-3xl font-bold text-blue-800 mb-6">Envía un mensaje</h2>
        
        <form id="contact-form" class="space-y-6">
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_subject" value="Nuevo mensaje desde Lavo Plus">
          
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-2">Nombre completo</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Tu nombre"
            />
          </div>

          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">Correo electrónico</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="tucorreo@ejemplo.com"
            />
          </div>

          <div>
            <label for="phone" class="block text-gray-700 font-medium mb-2">Teléfono (opcional)</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="222 123 4567"
            />
          </div>

          <div>
            <label for="message" class="block text-gray-700 font-medium mb-2">Mensaje</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="¿En qué podemos ayudarte?"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-blue-700 hover:bg-blue-800 text-white font-semibold py-3 px-6 rounded-lg transition duration-300 shadow-lg"
          >
            Enviar mensaje
          </button>
        </form>
      </div>

      <!-- Información de Contacto -->
      <div class="space-y-8" data-aos="fade-left" data-aos-delay="200">
        <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10">
          <h2 class="text-2xl md:text-3xl font-bold text-blue-800 mb-6">Información de contacto</h2>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg class="w-6 h-6 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-800">Teléfono</h3>
                <p class="text-gray-600">222 554 7693</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg class="w-6 h-6 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-800">Correo electrónico</h3>
                <p class="text-gray-600">lavopluspuebla@gmail.com</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg class="w-6 h-6 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 12.414a2 2 0 00-2.828 0l-4.243 4.243m8.486-8.486L15.75 10.5m-6.364 3.193l-3.242.565-.565-3.242m8.486 8.486L19.793 19.5m-14.586-14.586L4.207 4.5"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-800">Dirección</h3>
                <p class="text-gray-600">Av. 11 Oriente #1001, Col. Motolinia, Puebla</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-blue-100 p-3 rounded-full mr-4">
                <svg class="w-6 h-6 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-800">Horario</h3>
                <p class="text-gray-600">Lunes a Viernes: 8:00 AM - 8:00 PM</p>
                <p class="text-gray-600">Sábados: 9:00 AM - 4:00 PM</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Botón WhatsApp -->
        <div class="text-center">
          <a href="https://wa.me/522211846420" target="_blank" 
             class="inline-flex items-center justify-center bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg transition duration-300 shadow-lg w-full md:w-auto">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-6.29 3.018c-.173.099-.5.347-1.015.347-.321 0-.653-.074-.922-.198-.496-.198-1.093-.574-1.735-1.016-.636-.443-1.12-.952-1.476-1.221-.321-.236-.515-.37-.515-.694 0-.272.413-.719 1.24-1.496a9.772 9.772 0 0 1 1.089-.975l.099-.089c.124-.099.198-.198.298-.297.099-.099.05-.186-.025-.272-.074-.074-.174-.198-.297-.347-.223-.248-.535-.619-.736-.843-.198-.223-.397-.446-.545-.595-.149-.149-.248-.223-.372-.223-.124 0-.248.025-.372.074-.124.05-.322.149-.52.347-.198.198-.587.644-.587 1.572 0 .929.694 2.128 1.04 2.726.347.595 1.389 1.441 2.555 1.834.198.074.545.198.842.248.347.074.52.037.694-.025.174-.062.397-.234.545-.396.149-.161.322-.384.397-.31.074.074.05.422-.025.644-.074.223-.272.397-.47.546"/>
            </svg>
            Chatear por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Mapa -->
  <section class="px-6 pb-12 md:pb-20">
    <div class="max-w-6xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden" data-aos="fade-up">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3766.328808879569!2d-98.201943!3d19.2437578!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85cfc1f4ef424dd9%3A0xcd7fdcbba09debed!2sLavo%20Plus%20-%20Tintorer%C3%ADa%20Y%20Lavander%C3%ADa!5e0!3m2!1ses!2smx!4v1620000000000!5m2!1ses!2smx" 
        width="100%" 
        height="450" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy"
        class="w-full h-64 md:h-[450px]"
      ></iframe>
    </div>
  </section>

  <Footer />

  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script is:inline>
    // Inicializar animaciones
    AOS.init({
      duration: 800,
      once: true
    });

    // Manejar envío de formulario
    const contactForm = document.getElementById('contact-form');
    if (contactForm) {
      contactForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        const formData = new FormData(this);
        
        try {
          const response = await fetch('https://formsubmit.co/ajax/lavopluspuebla@gmail.com', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });
          
          if (response.ok) {
            alert('¡Mensaje enviado con éxito! Nos pondremos en contacto pronto.');
            contactForm.reset();
          } else {
            alert('Hubo un error al enviar el mensaje. Por favor inténtalo nuevamente.');
          }
        } catch (error) {
          alert('Error de conexión. Por favor inténtalo más tarde.');
        }
      });
    }
  </script>
</body>
</html>