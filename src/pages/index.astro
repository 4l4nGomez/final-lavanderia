---

import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Lavandería Express en Puebla: servicio rápido, confiable y entrega a domicilio para cuidar tu ropa con la mejor calidad." />
  <meta name="keywords" content="lavandería, tintorería, lavado, planchado, entrega a domicilio, Puebla, ropa limpia" />
  <meta name="author" content="Lavandería Express" />
  <meta name="robots" content="index, follow" />
  <meta property="og:title" content="Lavandería Express - Limpieza y Tintorería en Puebla" />
  <meta property="og:description" content="Servicio rápido y confiable de lavandería con entrega a domicilio en Puebla." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://tu-dominio.com" />
  <meta property="og:image" content="https://tu-dominio.com/og-image.jpg" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Lavandería Express - Limpieza y Tintorería en Puebla" />
  <meta name="twitter:description" content="Servicio rápido y confiable de lavandería con entrega a domicilio en Puebla." />
  <meta name="twitter:image" content="https://tu-dominio.com/twitter-image.jpg" />
  <title>Lavandería LAVO PLUS</title>
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
</head>

<body class="min-h-screen flex flex-col bg-gray-100 text-gray-800 font-sans">
  <Navbar/>
  
  <!-- Hero Section - Optimizado -->
  <section id="carrusel" class="py-12 md:py-16 px-6 bg-gradient-to-r from-blue-100 to-blue-50 text-center">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-blue-900 mb-4" data-aos="fade-up">
        ¿Buscas una lavandería y tintorería en Puebla?
      </h2>
      <p class="text-lg md:text-xl text-gray-700 mb-6" data-aos="fade-up" data-aos-delay="100">
        En <strong>Lavo Plus</strong> cuidamos tu ropa como si fuera nuestra. ¡Rápido y confiable!
      </p>
      <a href="https://wa.me/522211846420" target="_blank" 
         class="inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-full transition-all"
         data-aos="zoom-in" data-aos-delay="200">
        Más información
      </a>
    </div>
  </section>

  <!-- Quiénes Somos - Optimizado -->
  <section id="quienes-somos" class="bg-white py-12 px-6">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <img src="/quienes-somos.jpg" alt="Equipo de Lavandería Express"
           class="rounded-xl shadow-lg w-full object-cover max-h-[300px] md:max-h-[400px]"
           loading="lazy" data-aos="fade-right">
      
      <div data-aos="fade-left">
        <h2 class="text-2xl md:text-3xl font-bold text-blue-800 mb-4">
          ¿Quiénes somos?
        </h2>
        <p class="text-gray-700 mb-6">
          En <strong>Lavandería Lavo Plus</strong> llevamos más de <strong>13 años</strong> ofreciendo limpieza, cuidado y puntualidad.
        </p>
        
        <div class="grid grid-cols-3 gap-4">
          <div class="flex flex-col items-center" data-aos="flip-up">
            <svg class="w-8 h-8 md:w-10 md:h-10 text-blue-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M16 14a4 4 0 0 1-8 0m8 0a4 4 0 0 0-8 0m8 0v4m-8-4v4m12 4H4a2 2 0 0 1-2-2v-1a4 4 0 0 1 4-4h12a4 4 0 0 1 4 4v1a2 2 0 0 1-2 2z"/>
            </svg>
            <p class="text-xs md:text-sm text-center">Atención personalizada</p>
          </div>
          <!-- Repetir para otros dos iconos -->
        </div>
      </div>
    </div>
  </section>

  <!-- Servicios - Optimizado -->
  <section id="servicios" class="py-12 px-6 bg-blue-900">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-8 text-center">Nuestros Servicios</h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Servicio 1 -->
        <div class="bg-blue-800 rounded-lg p-6 text-center" data-aos="zoom-in">
          <div class="bg-blue-700 rounded-full p-4 mb-4 mx-auto w-16 h-16 flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M3 6h18M3 12h18M3 18h18"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">LAVADO GENERAL</h3>
          <p class="text-blue-300 text-sm">
            Servicio de lavado de ropa con cuidado especial.
          </p>
        </div>
        <!-- Repetir para otros servicios -->
      </div>
    </div>
  </section>

  <!-- Promociones - Optimizado -->
  <section id="promociones" class="py-12 px-6 bg-yellow-50">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-yellow-800 mb-6 text-center">Promociones del Mes</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Promo 1 -->
        <div class="bg-white rounded-lg p-6 shadow-md border border-yellow-200">
          <h3 class="text-xl font-bold text-yellow-800 mb-2">2x1 en Lavado Exprés</h3>
          <p class="text-yellow-700 mb-3 text-sm">Lleva 2 cargas por el precio de 1 en servicios exprés.</p>
          <span class="text-xs bg-yellow-200 text-yellow-900 px-3 py-1 rounded-full">Válido hasta 30/06</span>
        </div>
        <!-- Repetir para otras promos -->
      </div>
    </div>
  </section>

  <!-- Galería - Optimizado -->
  <section id="galeria" class="py-12 px-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-blue-800 mb-4 text-center">Galería</h2>
      <div class="relative w-full h-64 md:h-96 rounded-lg overflow-hidden shadow-lg">
        <!-- Imágenes del carrusel -->
      </div>
    </div>
  </section>

  <!-- Ubicación - Optimizado -->
  <section id="ubicacion" class="py-12 px-6 bg-gradient-to-b from-white to-blue-50">
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row gap-8">
      <div class="bg-white p-6 rounded-xl shadow-md md:w-1/2">
        <h2 class="text-2xl font-bold text-blue-800 mb-4">Encuéntranos fácilmente</h2>
        <p class="text-gray-700 mb-4">
          <strong>Sucursal matriz:</strong><br />
          Av. 11 Oriente #1001, Col. Motolinia, Puebla
        </p>
        <a href="https://maps.app.goo.gl/dnD5AxHN8GYnF2ac6" target="_blank" 
           class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg text-sm">
          Ver en Google Maps
        </a>
      </div>
      <div class="h-64 md:h-auto md:w-1/2 rounded-xl overflow-hidden shadow-md">
        <iframe class="w-full h-full" src="https://maps.google.com/maps?q=..."></iframe>
      </div>
    </div>
  </section>

  <!-- Contacto - Optimizado -->
  <section id="contacto" class="py-12 px-6 bg-gradient-to-br from-green-100 to-white">
    <div class="max-w-md mx-auto text-center">
      <h2 class="text-2xl font-bold text-green-800 mb-4">¿Tienes dudas?</h2>
      <a href="https://wa.me/52XXXXXXXXXX" target="_blank" 
         class="inline-flex items-center gap-2 bg-green-500 text-white px-6 py-3 rounded-full text-sm">
        Enviar WhatsApp
      </a>
    </div>
  </section>

  <footer class="bg-blue-800 text-white text-center py-6 mt-auto">
    <p>&copy; 2025 Lavandería Lavo Plus. Todos los derechos reservados.</p>
  </footer>

  <script type="module" is:inline>
    import AOS from 'https://cdn.jsdelivr.net/npm/aos@2.3.4/+esm';
    
    window.addEventListener('DOMContentLoaded', () => {
      AOS.init({
        duration: 800,
        once: true,
        offset: 50
      });

      // Carrusel simple
      let currentIndex = 0;
      const images = document.querySelectorAll('#galeria img');
      
      function showImage(index) {
        images.forEach((img, i) => {
          img.style.opacity = i === index ? 1 : 0;
        });
      }
      
      setInterval(() => {
        currentIndex = (currentIndex + 1) % images.length;
        showImage(currentIndex);
      }, 3000);
    });
  </script>
</body>
</html>